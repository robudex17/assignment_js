
<%- include('../includes/head'); %>


<%- include('../includes/navigation'); %>



 <h2>Your Cart</h2>

 <ul>
     <% if (prods.cart.items.length > 0) { %>
        <% for (let product of prods.cart.items) { %>
            <li>Product Title:<%= product.productId.title %></li>
            <li>ProductId:<%= product.productId._id%></li>
            <li>Quantity:<%=product.quantity%></li>
            <li>
                <form action="/deletefromcart" method="POST">
                     <input type="hidden" name="productId" value="<%= product._id %>">
                     <button class=btn>DELETE</button>
             </form></li> 
        <% }%>
    </ul>
        <hr>
        <div>
            <form action="/create-orders" method="POST">
                    <button class=btn>ORDER NOW</button>
            </form>
        </div>
    <% } else {%>
        <h1>No Product in the Cart</h1>
    <% } %>


